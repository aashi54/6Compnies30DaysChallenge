class Solution{
    public:
    string amendSentence (string s)
    {
        // your code here
        int n= s.size();
        string st ="";
        for(int i=0;i<n;i++){
            if(isupper(s[i])){
                s[i] = tolower(s[i]);
                if(i != 0) st+=" ";
            }
           
            
        
             st+= s[i];
        }
        return st;
    }
};
